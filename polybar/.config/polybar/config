; vim:ft=dosini
[colors]
background = ${xrdb:background:#ff0000}
foreground = ${xrdb:foreground:#ff0000}
accent = ${xrdb:color3:#ff0000}
alert = ${xrdb:color1:#ff0000}

[global/wm]
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/top]
background = ${colors.background}
fixed-center = false
font-0 = Hack:size=10;3
font-1 = FontAwesome:style=Regular:size=10;2
foreground = ${colors.foreground}
height = 40
modules-left = i3
modules-right = backlight microphone volume cpu memory wlan0 wlan1 battery0 battery1 temperature date
monitor = ${env:MONITOR:}
module-margin = 2
padding-right = 2
separator = %{F#928374}|%{F-}
tray-position = right
width = 100%
dpi-x = 144
dpi-y = 144
; dpi-x = 96
; dpi-y = 96

[module/i3]
type = internal/i3
enable-scroll = false
enable-click = false
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false

label-mode-background = ${colors.background}
label-mode-foreground = ${colors.foreground}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.accent}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
label = " %percentage%%"
format-prefix = 
format-prefix-foreground = ${colors.accent}
enable-scroll = false

[module/cpu]
type = internal/cpu
format-prefix = 
format-prefix-foreground = ${colors.accent}
interval = 2
label = " %percentage%%"

[module/memory]
type = internal/memory
format-prefix = 
format-prefix-foreground = ${colors.accent}
interval = 5
label = " %percentage_used%%"

[module/wlan0]
type = internal/network
interface = wlp4s0
interval = 5

format-connected-prefix = 
format-connected-prefix-foreground = ${colors.accent}
label-connected = " %signal%%"

format-disconnected-prefix = 
format-disconnected-prefix-foreground = ${colors.accent}
label-disconnected = " -"

[module/wlan1]
inherit = module/wlan0
interface = wlp3s0

[module/date]
type = internal/date
date = "%a %d.%m"
interval = 5
label = %date% - %time%
time = %H:%M

[module/volume]
type = internal/pulseaudio

format-muted-prefix = 
format-muted-prefix-foreground = ${colors.accent}
label-muted = " -"

format-volume-prefix = 
format-volume-prefix-foreground = ${colors.accent}
label-volume = " %percentage%%"

[module/microphone]
type = custom/script
exec = ~/.config/polybar/microphone.sh
format-prefix = 
format-prefix-foreground = ${colors.accent}
label = " %output%"
interval = 2

[module/battery0]
type = internal/battery
battery = BAT0
full-at = 95

format-charging-prefix = 
format-charging-prefix-foreground = ${colors.accent}
label-charging = " %percentage%%"

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
ramp-capacity-foreground = ${colors.accent}
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 

format-full-prefix = 
format-full-prefix-foreground = ${colors.accent}
label-full = " %percentage%%"

[module/battery1]
inherit = module/battery0
battery = BAT1

[module/temperature]
type = internal/temperature
warn-temperature = 60

format-prefix = 
format-prefix-foreground = ${colors.accent}
label = " %temperature-c%"

format-warn-prefix = 
format-warn-prefix-foreground = ${colors.alert}
label-warn = " %temperature-c%"
